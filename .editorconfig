# EditorConfig for AKIKUBA
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# ====================
# Default settings for all files
# ====================
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# ====================
# JavaScript & TypeScript
# ====================
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single
max_line_length = 120

# ====================
# JSON files
# ====================
[*.json]
indent_size = 2
insert_final_newline = false

# ====================
# YAML files
# ====================
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# ====================
# Python files
# ====================
[*.py]
indent_size = 4
max_line_length = 88

# ====================
# HTML & Templates
# ====================
[*.{html,htm,vue,svelte}]
indent_size = 2
max_line_length = 120

# ====================
# CSS, SCSS, LESS
# ====================
[*.{css,scss,sass,less,styl}]
indent_size = 2
max_line_length = 120

# ====================
# Markdown files
# ====================
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# ====================
# Configuration files
# ====================

# Package.json and similar
[package.json]
indent_size = 2

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2

# Environment files
[.env*]
indent_size = 2
insert_final_newline = true

# ====================
# Shell scripts
# ====================
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# ====================
# SQL files
# ====================
[*.sql]
indent_size = 2
max_line_length = 120

# ====================
# XML files
# ====================
[*.{xml,svg}]
indent_size = 2

# ====================
# Properties files
# ====================
[*.properties]
indent_size = 2

# ====================
# INI files
# ====================
[*.ini]
indent_size = 2

# ====================
# TOML files
# ====================
[*.toml]
indent_size = 2

# ====================
# Makefile
# ====================
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# ====================
# Go files
# ====================
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 120

# ====================
# Rust files
# ====================
[*.rs]
indent_size = 4
max_line_length = 100

# ====================
# Java files
# ====================
[*.java]
indent_size = 4
max_line_length = 120

# ====================
# C/C++ files
# ====================
[*.{c,cpp,h,hpp}]
indent_size = 4
max_line_length = 120

# ====================
# PHP files
# ====================
[*.php]
indent_size = 4
max_line_length = 120

# ====================
# Ruby files
# ====================
[*.rb]
indent_size = 2
max_line_length = 120

# ====================
# Special files
# ====================

# License files
[LICENSE*]
insert_final_newline = true
trim_trailing_whitespace = true

# Changelog
[CHANGELOG*]
trim_trailing_whitespace = true

# README files
[README*]
trim_trailing_whitespace = false

# ====================
# Ignore certain file patterns
# ====================

# Minified files
[*.min.{js,css}]
insert_final_newline = false
trim_trailing_whitespace = false

# Vendor/third-party files
[{vendor/**,node_modules/**,dist/**,build/**}]
charset = unset
indent_style = unset
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

# Generated files
[*.generated.*]
charset = unset
indent_style = unset
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
